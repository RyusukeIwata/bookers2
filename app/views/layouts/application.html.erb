<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header id="header" class="">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h3>
            <font color="#FFFFFF">Bookers</font>
          </h3>
        </div>

        <div class="collapse navbar-collapse" id="navbarEexample7">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
                <%=link_to (user_path(current_user.id)) do %>
                  <i class="fas fa-home"></i>
                  <span>Home</span>
                <% end %>
              </li>
              <li class="">
                <%=link_to("/users") do %>
                  <i class="fas fa-user"></i>
                  <span>Users</span>
                <% end %>
              </li>
              <li class="">
                <%=link_to("/books") do %>
                  <i class="fas fa-book"></i>
                  <span>Books</span>
                <% end %>
              </li>
              <li class="">
                  <%= link_to destroy_user_session_path, :method => :delete do %>
                    <i class="fas fa-sign-out-alt"></i> logout
                  <% end %>
              </li>
            <% else %>
              <li class="">
                  <%=link_to(root_path) do %>
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                  <% end %>
              </li>
              <li class="">
                <%=link_to("/home/about") do %>
                  <i class="fas fa-link"></i>
                  <span>About</span>
                <% end %>
              </li>
              <li class="">
                  <%= link_to new_user_registration_path do |f| %>
                  <i class="fas fa-edit"></i>sign up
                  <% end %>
              </li>
              <li class="">
                  <%= link_to new_user_session_path do |f| %>
                    <i class="fas fa-sign-in-alt"></i>
                    <span>login</span>
                  <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <body>
    <div class="col-md-ofset-3 col-md-3">
    </div>
    <div class="col-md-ofset-3 col-md-6">
    <% if flash[:notice] %>
      <p class="pops"><%= flash[:notice] %></p>
    <% end %>
    <%= yield %>
    <p style="float:right;">CopyRight Infratop.inc</p>
  </div>
  </body>
  <footer>
  </footer>
</html>
