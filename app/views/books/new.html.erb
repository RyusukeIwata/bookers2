<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <label>Title</label>
    <br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <label>Opinion</label>
    <br>
    <%= f.text_area :body, rows:"3" %>
  </div>
  <br>
  <hr>
  <%= f.submit "Create Book" %>
  <br>
<% end %>
