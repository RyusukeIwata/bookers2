<%= form_for(@book, url: books_path) do |f| %>
          <% if @book.errors.any? %>
            <div id="error_explanation">
              <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
              <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
<% end %>



<div class="container">
  <div class="row">
    <div class="col-xs-3">
        <%= render 'users/list', user: @user %>

        <br>
        <%= render 'books/list', book: @book %>

    </div>

    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
          <tbody>
            <tr>
              <th><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %><br><%=link_to(user_path(@user.id)) do %><%= @user.name %><% end %></th>
              <td><%=link_to(book_path(@book.id)) do %><%= @book.title %><% end %></td>
              <td><%= @book.body %></td>
              <% if current_user.id == @user.id %>
                <td><%=link_to 'Edit', edit_book_path(@book), class: "btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), class: "btn-sm btn-danger" ,method: :delete, data: { confirm: 'Are you sure?'} %></td>
              <% end %>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>
