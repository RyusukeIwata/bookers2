<h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% books.each do |book| %>
          <tbody>
            <tr>
              <th>
                <%=link_to(user_path(book.user)) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %>
                <% end %>
              </th>
              <td><%=link_to(book_path(book.id)) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        <% end %>
      </table>