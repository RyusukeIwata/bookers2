<h1>User info</h1>
  <table class="table">
    <tbody>
      <tr>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to "", edit_user_path(user), class:"btn btn-lg btn-block btn-base-1 mt-20 fas fa-wrench" %>
