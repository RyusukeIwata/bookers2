<%= form_for(@book, url: books_path) do |f| %>
          <% if @book.errors.any? %>
            <div id="error_explanation">
              <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
              <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-xs-3">
        <%= render 'users/list', user: @user %>

        <br>
        <%= render 'books/list', book: @book %>

    </div>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <th><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %></th>
              <td><%=link_to(book_path(book.id)) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
